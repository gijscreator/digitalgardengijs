{% render 'partials/head.liquid' %}

<main class="home">

    {% comment %} Section with filters and sorts {% endcomment %}
    <section>
        <nav class="garden-nav">
            <div class="filter-group">
                <strong>Filter:</strong>
                <a href="/?category=all" class="{% if selectedCategory == 'all' %}active{% endif %}">All</a>
                <a href="/?category=seed" class="{% if selectedCategory == 'seed' %}active{% endif %}">Seeds</a>
                <a href="/?category=growth" class="{% if selectedCategory == 'growth' %}active{% endif %}">Growth</a>
                <a href="/?category=evergreen" class="{% if selectedCategory == 'evergreen' %}active{% endif %}">Evergreen</a>
            </div>

            <div class="sort-group">
                <strong>Sort:</strong>
                <a href="/?sort=newest&category={{ selectedCategory }}">Newest</a>
                <a href="/?sort=oldest&category={{ selectedCategory }}">Oldest</a>
            </div>
        </nav>
    </section>

    {% comment %} Links for nav {% endcomment %}
    <section>
        <ul>
            <li>
                <a href="/notes">Alle belangrijke notities <span>!important</span>  </a>
            </li>
            <li>
                <a href="/experimenteren">My Playground</a>
            </li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
        </ul>
    </section>

    {% comment %} Notes results {% endcomment %}
    <section>
        <ul>
        {% for note in notes %}
            <li>
            <header>
                <span>{{ note.category }}</span>
                <span>#{{ note.topic }}</span>
                <h3>{{ note.title }}</h3>
            </header>

            {% if note.file_url %}
                <div class="attachment">
                {% if note.file_url contains '.pdf' %}
                    <a href="{{ note.file_url }}" target="_blank">ðŸ“„ View PDF Document</a>
                {% else %}
                    <img src="{{ note.file_url }}" alt="Note Image">
                {% endif %}
                </div>
            {% endif %}

            <p>{{ note.content }}</p>

            {% if note.external_url %}
                <a href="{{ note.external_url }}" target="_blank" > Source Link </a>
            {% endif %}

            {% if note.additional_links %}
                <div class="extra-links">
                <strong>More resources:</strong>
                {{ note.additional_links | newline_to_br }}
                </div>
            {% endif %}
            
            <footer>{{ note.created_at | date: "%b %d, %Y" }}</footer>
            </li>
        {% endfor %}
        </ul>
    </section>

</main>


</body>

</html>